    "compilerOptions": {
      "rootDir": "./src/ts",                  
      "outDir": "./dist/js",                   
      "target": "es3",                     
      "module": "es6",                       
      "lib": ["es6", "dom"],                   
      "removeComments": true,                  
      "downlevelIteration": true,               
